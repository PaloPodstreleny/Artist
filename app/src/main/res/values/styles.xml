<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:actionOverflowButtonStyle">@style/FilterOverflowButton</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorGreyPlaceholder</item>
    </style>

    <!-- Style to replace actionbar overflow icon. set item 'android:actionOverflowButtonStyle' in AppTheme -->
    <style name="FilterOverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_filter</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:contentDescription">"Lala"</item>
    </style>

    <style name="TextPrimary">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSecodary">
        <item name="android:textColor">@color/colorGreyPlaceholder</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TextPrimaryLabel" parent="TextPrimary">
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="WidgetArtTV" parent="TextPrimary">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_margin">@dimen/layout_margin_small</item>
    </style>

    <style name="WidgetArtListItemTV" parent="TextPrimary">
        <item name="android:padding">@dimen/inner_padding_small</item>
    </style>


    <style name="Heading">
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">sans-serif-bold</item>
    </style>
    <style name="DetailTitle" parent="Heading">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>




</resources>
