<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:actionOverflowButtonStyle">@style/FilterOverflowButton</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/colorGreyPlaceholder</item>
    </style>

    <!-- Style to replace actionbar overflow icon. set item 'android:actionOverflowButtonStyle' in AppTheme -->
    <style name="FilterOverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_filter</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:contentDescription">@string/filter_content_description</item>
    </style>

    <style name="TextPrimary">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSecodary">
        <item name="android:textColor">@color/colorGreyPlaceholder</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextPrimaryLabel" parent="TextPrimary">
        <item name="android:padding">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="WidgetArtTV" parent="TextPrimary">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_margin">@dimen/layout_margin_small</item>
    </style>

    <style name="WidgetArtListItemTV" parent="TextPrimary">
        <item name="android:padding">@dimen/inner_padding_small</item>
    </style>


    <style name="Heading">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="DetailTitle" parent="Heading">
        <item name="android:layout_marginEnd">@dimen/layout_margin_medium</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_medium</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin_medium</item>
        <item name="android:layout_marginRight">@dimen/layout_margin_medium</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin_small</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>




</resources>
