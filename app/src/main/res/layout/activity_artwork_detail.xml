<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.art.artworks.detail.ArtworkDetail">


    <include
        android:id="@+id/include_toolbar"
        layout="@layout/toolbar_shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <FrameLayout
        android:id="@+id/fragment_helper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorGreyPlaceholder"
        android:padding="20dp"
        app:layout_constraintDimensionRatio="16:12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_toolbar">

        <ImageView
            android:id="@+id/artwork_image_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:transitionName="@string/transition_photo_detail_main" />


    </FrameLayout>


    <TextView
        android:id="@+id/artwork_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fragment_helper"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/artwork_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/artwork_title"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/artwork_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/artwork_date"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/artwork_published"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/artwork_published"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/artwork_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/artwork_published"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/artwork_rights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/artwork_website"
        app:layout_constraintStart_toStartOf="parent"
        />



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:visibility="gone"

        app:elevation="4dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:pressedTranslationZ="8dp"
        app:srcCompat="@drawable/ic_share"
        tools:visibility="visible" />

</android.support.constraint.ConstraintLayout>
