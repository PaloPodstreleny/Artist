<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_item_margin"
    android:foreground="?attr/selectableItemBackground"
    android:focusable="true"
    >


    <ImageView
        android:id="@+id/artwork_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:transitionName="@string/transition_photo_detail_main"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/artwork_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:paddingTop="48dp"
        android:background="@drawable/item_gradient"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/colorWhite"
        tools:text="Hello world!"
        app:layout_constraintBottom_toBottomOf="@id/artwork_image"
        app:layout_constraintEnd_toEndOf="@id/artwork_image"
        app:layout_constraintStart_toStartOf="@id/artwork_image"


        />

</android.support.constraint.ConstraintLayout>