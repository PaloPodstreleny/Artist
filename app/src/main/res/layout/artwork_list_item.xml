<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_item_margin"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">


    <ImageView
        android:id="@+id/artwork_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:transitionName="@string/transition_photo_detail_main"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/artwork_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/item_gradient"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingBottom="@dimen/inner_padding_small"
        android:paddingEnd="@dimen/inner_padding_small"
        android:paddingStart="@dimen/inner_padding_small"
        android:paddingTop="@dimen/list_item_text_view_top_padding"
        android:textDirection="locale"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@id/artwork_image"
        app:layout_constraintEnd_toEndOf="@id/artwork_image"
        app:layout_constraintStart_toStartOf="@id/artwork_image"
        tools:text="Hello world!"
        />

</android.support.constraint.ConstraintLayout>